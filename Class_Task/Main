package Class_Task;

import java.util.Scanner;

/**
 * program to determine first common character in two character arrays
 * Constraints : Time complexity for this code O(m+n). 1. The space complexity
 * 2. The space complexity should be O(1), and try within 40 bits. 3. The
 * character array can only hold the lowercase letters a through z. 4. No
 * existing comparison functions are allowed.
 *
 * @author Amna Ghori
 */
public class Main {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter first string: ");
        char[] ch1 = sc.nextLine().toCharArray();
        System.out.println("Enter second string: ");
        char[] ch2 = sc.nextLine().toCharArray();
        commonCharacter(ch1, ch2);
    }

    public static void commonCharacter(char[] ch1, char[] ch2) {
        byte i; // will occupy 8 bits in memory
        int checker = 0; // will occupy 32 bits in memory
        for (i = 0; i < ch1.length; i++) {
            checker |= (1 << ch1[i] - 'a');
        }

        for (i = 0; i < ch2.length; i++) {
            if ((checker & (1 << ch2[i])) > 0) {
                System.out.println("'" + ch2[i] + "' is common");
                return;
            }
        }
    }
}
